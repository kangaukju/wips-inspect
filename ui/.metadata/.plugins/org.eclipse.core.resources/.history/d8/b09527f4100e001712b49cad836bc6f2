<body>
	<fieldset class="main_fieldset">
		<legend>
			<img class="head_img" src="/img/profiles.png">
			Profile [<span id="profile_legend"></span>]			
		</legend>		
		
		<table id="history_list_table" class="tablesorter">
			<thead>
				<tr>
					<th width="20px;"></th>
					<th>ID</th>
					<th>Timestamp</th>
					<th>Config List</th>
				</tr>
			</thead>
			<tbody></tbody>
			
		</table>
