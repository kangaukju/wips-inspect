<script type="text/javascript">
var config_list_table_xlat = {
		tag: "tr",
		id: "$\{id\}",
		class:"pointer",
		children: [
			{tag:"td", html:"<img class='config_check_img hidden table_img' src='/img/M/menu.svg' id='img_$\{id\}'>"},
			{tag:"td", html:"$\{name\}"},
			{tag:"td", html:"$\{captureAirConfDescs\}"},
			{tag:"td", html:"$\{shooterAirConfDescs\}"},
			{tag:"td", html:"$\{updated\}"},
			{tag:"td", html:"<a class='config_xml_img' href='#config_xml_modal' id='$\{id\}'><img class='table_img' src='/img/M/file-xml2.svg'></a>"},
			{tag:"td", html:"<img class='config_del_img table_img' src='/img/M/trash.svg' id='$\{id\}'>"},
		]
};

function load_config_list() {
	jQuery.ajax({
		url: "/get_config.jsp",
		data: {detail: 'true'},
		cache: false,
		beforeSend: function() {
			$("#config_list_table > tbody").empty();
		},
		dataType: "json",
		success: function(result) {
			if (result.good == false) {
				alert("load_config_list: "+result.cause);
				return;
			}			
			$("#config_list_table > tbody").html(
				json2html.transform(result, config_list_table_xlat)
			);
			$("#config_list_table").tablesorter({
				headers: {
					0: {sorter: false},
					2: {sorter: false},
					3: {sorter: false},
					5: {sorter: false},
				}
			}).trigger("update");
			$("#config_list_table > tbody > tr").click(function(e) {
				$("#config_list_table > tbody > tr").removeClass('selected');				
				$(this).toggleClass('selected');
				$(".config_check_img").addClass('hidden');
				$("#img_"+$(this).attr("id")).toggleClass('hidden');
			});
			
			bind_config_handler();
		},
		error: function(e) {
			ajax_err_handle(e);
		}
	});
}

function bind_config_handler() {
	$(".config_xml_img").animatedModal({
		modalTarget: 'config_xml_modal',
		animatedIn: 'lightSpeedIn',
		animatedOut: 'bounceOutDown',
		beforeOpen: function() {
			
			jQuery.ajax({
				url: "/config_xml.jsp",
				data: { 'config_id': config_id },
				cache: false,
				dataType: "json",
				success: function(result) {
					if (result.good == false) {
						pop("Error loading config XML.\n"+result.cause);
						return;
					}
					
				},
				error: function(e) {
					//ajax_err_handle(e);
					pop("Error loading config XML.\nplease retry...");
				}
			});
		},
	});
	/*
	$(".config_xml_img").click(function() {
		var config_id = $(this).attr("id");
		jQuery.ajax({
			url: "/config_xml.jsp",
			data: { 'config_id': config_id },
			cache: false,
			dataType: "json",
			success: function(result) {
				if (result.good == false) {
					pop("Error loading config XML.\n"+result.cause);
					return;
				}
				
			},
			error: function(e) {
				//ajax_err_handle(e);
				pop("Error loading config XML.\nplease retry...");
			}
		});
	});
	*/
	
	$(".config_del_img").click(function() {
		if (!confirm("Are you sure delete config ?")) {
			return;
		}
		var config_id = $(this).attr("id");
		jQuery.ajax({
			url: "/del_config.jsp",
			data: { 'config_id': config_id },
			cache: false,
			dataType: "json",
			success: function(result) {
				if (result.good == false) {
					pop("Error loading config.\n"+result.cause);
					return;
				}
				pop("success delete config");
				load_config_list();
			},
			error: function(e) {
				//ajax_err_handle(e);
				pop("Error loading config.\nplease retry...");
			}
		});
	});
}

$(document).ready(function() {
	load_config_list();
	
	$("#modify_config").click(function() {
		var $s = $("#config_list_table > tbody .selected");
		if ($s.length == 1) {
			gogo("config.jsp?config_id="+$s.attr("id"));
		}
	});
	
	$("#add_config").click(function() {
		gogo("config.jsp");
	});
	
	
});
</script>
